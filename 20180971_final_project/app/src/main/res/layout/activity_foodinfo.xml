<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BFCDFF"
        android:orientation="vertical">


        <TextView
            android:id="@+id/mtextView9"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="45dp"
            android:autoText="true"
            android:background="#8EA6FB"
            android:gravity="center_vertical"
            android:text="  What I Eat"
            android:textSize="24sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginBottom="10dp"
                android:background="#DAE8FF">

                <TextView
                    android:id="@+id/mtextView7"
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="끼니정보 : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/foodInfo_whenMeal"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="끼니정보"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="#DAE8FF">

                <TextView
                    android:id="@+id/mtextView6"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="메뉴 : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/foodInfo_menu"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="메뉴"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="#DAE8FF">

                <TextView
                    android:id="@+id/mtextView8"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="칼로리 : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/foodInfo_cal"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="칼로리"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/mteffxtView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=" (kcal)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="#DAE8FF"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="지도 : "
                    android:textSize="20dp" />

                <fragment
                    android:id="@+id/mapView_foodInfo"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="#DAE8FF">

                <TextView
                    android:id="@+id/mtextView13"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="위치 : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/foodInfo_addr"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="위치"
                    android:textSize="15dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="#DAE8FF">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="가게이름 : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/foodInfo_res"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="가게이름"
                    android:textSize="20dp" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/foodInfo_b1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="#4447DD"
                android:onClick="onClick"
                android:text="수정" />

            <Button
                android:id="@+id/foodInfo_b2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="#4447DD"
                android:onClick="onClick"
                android:text="삭제" />

            <Button
                android:id="@+id/foodInfo_b3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="#4447DD"
                android:onClick="onClick"
                android:text="취소" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>